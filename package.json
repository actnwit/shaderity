{
  "name": "shaderity-ts",
  "version": "0.0.1",
  "main": "loader/index.js",
  "repository": "https://github.com/emadurandal/shaderity.git",
  "author": "Yuki Shimada <emadurandal@gmail.com>",
  "license": "MIT",
  "scripts": {
    "setup": "cp ./pre-commit ./.git/hooks",
    "build": "yarn build-dev && yarn build-prod && yarn build-test && yarn build-type",
    "build-dev": "webpack --config webpack.config.development.js",
    "build-prod": "webpack --config webpack.config.production.js",
    "build-test": "webpack --config webpack.config.test.js",
    "build-type": "npx tsc --emitDeclarationOnly",
    "serv": "node server.js",
    "test": "yarn test-unit",
    "test-unit": "jest --config jest.config.js ./test",
    "test-coverage": "jest --coverage",
    "doc": "typedoc --includeDeclarations --ignoreCompilerErrors --exclude '**/*+(test|d).ts' --out ./docs/ ./src/"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.6.2",
    "express": "^4.17.1",
    "gl": "^4.3.3",
    "http-server": "^0.11.1",
    "jest": "^24.8.0",
    "jest-image-snapshot": "^2.8.2",
    "jest-puppeteer": "^4.2.0",
    "puppeteer": "^1.17.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.2",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.1",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.4",
    "webpack-merge": "^4.2.1",
    "glslify-loader": "^2.0.0",
    "raw-loader": "^3.0.0",
    "shaderity-loader": "git+https://github.com/emadurandal/shaderity-loader.git"
  },
  "dependencies": {
    "requirejs": "^2.3.6"
  }
}
